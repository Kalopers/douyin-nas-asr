# =========================
# App configuration
# =========================
APP_HOST=0.0.0.0
APP_PORT=17650
SECRET_KEY=your_secure_secret_key_here

# =========================
# NAS paths (inside container)
# =========================
NAS_JSON_DIR=/app/data/json
NAS_VIDEO_DIR=/app/data/videos
NAS_IMAGE_DIR=/app/data/images

# =========================
# Database
# =========================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=app_data

DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =========================
# Whisper / ASR
# =========================
WHISPER_MODEL_SIZE=small
WHISPER_DEVICE=cpu

# =========================
# Douyin / third-party API
# =========================
DY_TIKHUB_AUTH_KEY=your_tikhub_key_here
